@import '../../style/base.styl';
@import '../../style/base.styl';
.container
	display flex
	height 100vh
	overflow-y scroll
	.nav
		width 200rpx
		white-space initial
		.nav-item
			width 100%
			text-align center
			background-color #fff
			margin 0
			display flex
			align-items center
			justify-content center
			position relative
			border-bottom 1rpx solid #fbfbfb
			&.tab-active
				background-color #f1f1f1
				&::after
					content: ""
					width 8rpx
					height 30rpx
					border-radius 10rpx 0 0 10rpx
					position absolute
					background-color $fontColor3
					top 0
					right 0rpx
					bottom 0
					margin auto
	.content
		padding 0 30rpx
		background-color #f1f1f1
		.item
			height 200rpx
			padding 32rpx
			box-sizing border-box
			background #ffffff
			border-radius 16rpx
			margin-bottom 20rpx
