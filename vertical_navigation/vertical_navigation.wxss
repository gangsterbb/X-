.nav {
  width: 200rpx;
  white-space: initial;
  float: left;
  overflow-y: scroll; 
  /* border: black 1rpx solid; */
}
.nav .nav-item {
  width:200rpx;
  text-align: center;
  background-color: #fff;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-bottom: 1rpx solid #fbfbfb;
  overflow-y: scroll
}
.nav .nav-item.tab-active {
  background-color: #f1f1f1;
}
.nav .nav-item.tab-active::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: #33333d;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.content {
  /* border: black 1rpx solid; */
  float: left;
  width: 490rpx;
  padding: 0 30rpx;
  background-color: #f1f1f1;
  overflow-y: scroll
}
.content .item {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 16rpx;
