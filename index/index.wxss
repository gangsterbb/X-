.zoom { 
  animation-name: zoom; 
  transform-origin: center;
  animation: zoom 3s infinite;  
  -webkit-animation: zoom 0.4s;

}

@keyframes zoom {
  from {
    transform: scale(1); /*开始为原始大小*/
  }
  25% {
    transform: scale(1.3); 
  }
  50% {
    transform: scale(1.0);
  }
  75% {
    transform: scale(0.8);
  } 
}

.zoom_1 {
  animation-name: zoom;
  transform-origin: center;
  animation: zoom 1.2s;
  -webkit-animation: zoom 1.2s;
}

@keyframes zoom_1 {
  from {
    transform: scale(2.4); /*开始为原始大小*/
  }
  25% {
    transform: scale(1.8); 
  }
  50% {
    transform: scale(1.4);
  }
  75% {
    transform: scale(1.2);
  }
}





