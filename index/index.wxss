  white-space: nowrap;
}
.scroll .item {
  padding: 0 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  position: relative;
  color:rgba(73, 73, 73, 0.8);
}
.scroll .item .line {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 50rpx;
  height: 6rpx;
  background: transparent;
}
.scroll .item.active {
  color: black;
  font-size: 40rpx;
  font-weight: 600;
}
.scroll .item.active .line {
  background: #e6ae5d;
  border-radius: 10rpx;
