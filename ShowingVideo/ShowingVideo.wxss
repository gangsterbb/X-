.scroll {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  overflow-x: auto;
  white-space: nowrap;
  margin-left: 20rpx;
}
.scroll .item {
  padding: 0 60rpx;
  height: 100rpx;
  font-size: 33rpx;
  line-height: 100rpx;
  display: inline-block;
  position: relative;
  color:black;
}
.scroll .item .line {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 80rpx;
  height: 6rpx;
  background: transparent;
  border-radius: 80rpx;
}
.scroll .item.active {
  color: #cd7f12;
  font-size: 35rpx;
  font-weight: 500;
}
.scroll .item.active .line {
  background: #cd7f12;
  border-radius: 15rpx;
}



